  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Photobooth Frame</title>
  <style>
    body {
      margin: 0;
      overflow: hidden;
      background: black;
    }
    #camera-container {
      position: relative;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
    }
    #my_camera {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    #frame {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
    }
  </style>
